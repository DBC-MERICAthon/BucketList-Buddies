<header class="nav-bar">
  <div class="logo"><%= image_tag "LOGO.png" %></div>
  <% if current_user %>
    <div class="welcome">
      <% if user_signed_in? %>
        <div class="gravatar-pic"><a href="/users/<%= current_user.id %>"><%= image_tag current_user.gravatar_url %></a></div>
      <% end %>
      <div class="greeting">Welcome, <%= current_user.name %>!   |   <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
  <% end %>
</header>
